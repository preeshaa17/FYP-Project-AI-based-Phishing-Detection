<?xml version="1.0" encoding="UTF-8"?>
<OfficeApp xmlns="http://schemas.microsoft.com/office/appforoffice/1.1"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xmlns:bt="http://schemas.microsoft.com/office/officeappbasictypes/1.0"
           xmlns:ov="http://schemas.microsoft.com/office/taskpaneappversionoverrides"
           xsi:type="MailApp">

  <!-- Basic Info -->
  <Id>ffd0826d-3295-4ce7-b991-104b7961e506</Id>
  <Version>1.0.0.0</Version>
  <ProviderName>Universiti Teknologi PETRONAS</ProviderName>
  <DefaultLocale>en-US</DefaultLocale>
  <DisplayName DefaultValue="AI-Based Phishing Detector" />
  <Description DefaultValue="An Outlook add-in that detects phishing attempts using AI." />
  <SupportUrl DefaultValue="https://www.utp.edu.my" />

  <!-- Hosts -->
  <Hosts>
    <Host Name="Mailbox" />
  </Hosts>

  <!-- Requirements -->
  <Requirements>
    <Sets DefaultMinVersion="1.1">
      <Set Name="Mailbox" />
    </Sets>
  </Requirements>

  <!-- ✅ ADDED: FormSettings (REQUIRED for MailApp - fixes Error #3) -->
  <FormSettings>
    <Form xsi:type="ItemRead">
      <DesktopSettings>
        <SourceLocation DefaultValue="https://localhost:3000/taskpane.html" />
        <RequestedHeight>250</RequestedHeight>
      </DesktopSettings>
    </Form>
  </FormSettings>

  <!-- ✅ MOVED: Permissions now comes AFTER FormSettings (fixes Error #1 & #2) -->
  <Permissions>ReadItem</Permissions>

  <!-- Version Overrides (modern schema for Outlook add-ins) -->
  <VersionOverrides xmlns="http://schemas.microsoft.com/office/mailappversionoverrides/1.0"
                    xsi:type="VersionOverridesV1_0">
    <Requirements>
      <bt:Sets DefaultMinVersion="1.1">
        <bt:Set Name="Mailbox" />
      </bt:Sets>
    </Requirements>

    <Hosts>
      <Host xsi:type="MailHost">
        <DesktopFormFactor>
          <FunctionFile resid="functionFile" />

          <!-- Button on Message Read Surface -->
          <ExtensionPoint xsi:type="MessageReadCommandSurface">
            <OfficeTab id="TabDefault">
              <Group id="phishingGroup">
                <Label resid="groupLabel" />
                <Icon>
                  <bt:Image size="16" resid="icon16" />
                  <bt:Image size="32" resid="icon32" />
                  <bt:Image size="80" resid="icon80" />
                </Icon>
                <Control xsi:type="Button" id="phishingButton">
                  <Label resid="buttonLabel" />
                  <Supertip>
                    <Title resid="buttonLabel" />
                    <Description resid="buttonDescription" />
                  </Supertip>
                  <Icon>
                    <bt:Image size="16" resid="icon16" />
                    <bt:Image size="32" resid="icon32" />
                    <bt:Image size="80" resid="icon80" />
                  </Icon>
                  <Action xsi:type="ShowTaskpane">
                    <SourceLocation resid="taskpaneUrl" />
                  </Action>
                </Control>
              </Group>
            </OfficeTab>
          </ExtensionPoint>
        </DesktopFormFactor>
      </Host>
    </Hosts>

    <!-- Resources: where your icons and URLs are declared -->
    <Resources>
      <bt:Images>
        <bt:Image id="icon16" DefaultValue="https://localhost:3000/assets/icon-32.png" />
        <bt:Image id="icon32" DefaultValue="https://localhost:3000/assets/icon-32.png" />
        <bt:Image id="icon80" DefaultValue="https://localhost:3000/assets/icon-128.png" />
      </bt:Images>

      <bt:Urls>
        <bt:Url id="functionFile" DefaultValue="https://localhost:3000/function-file.html" />
        <bt:Url id="taskpaneUrl" DefaultValue="https://localhost:3000/taskpane.html" />
      </bt:Urls>

      <bt:ShortStrings>
        <bt:String id="groupLabel" DefaultValue="Phishing Detector" />
        <bt:String id="buttonLabel" DefaultValue="Scan Email" />
      </bt:ShortStrings>

      <bt:LongStrings>
        <bt:String id="buttonDescription" DefaultValue="Scan this email for phishing content using AI." />
      </bt:LongStrings>
    </Resources>
  </VersionOverrides>
</OfficeApp>